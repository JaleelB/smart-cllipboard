{
    "manifest_version": 3,
    "name": "Smart Clipboard",
    "version": "1.0",
    "description": "Automatically categorizes copied content into different sections and saves them for easy access later on.",
    "permissions": [
      "clipboardRead",
      "clipboardWrite"
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html"
    }
  }